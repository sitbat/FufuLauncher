<Window
    x:Class="update.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FufuLauncher Updater">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/> <RowDefinition Height="*"/>  </Grid.RowDefinitions>

        <Grid Grid.Row="1" Padding="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="5">
                <TextBlock Text="软件更新" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:Name="VersionTitleText" Text="正在检查新版本..." Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,20">
                
                <ProgressRing x:Name="LoadingRing" IsActive="True" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <StackPanel x:Name="UpdateInfoPanel" Visibility="Collapsed" Spacing="10">
                    <TextBlock Text="更新内容：" FontWeight="Bold"/>
    
                    <ScrollViewer MaxHeight="180">
                        <TextBlock x:Name="ReleaseNoteText" TextWrapping="Wrap" Text="..."/>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel x:Name="ProgressPanel" Visibility="Collapsed" VerticalAlignment="Center" Spacing="8">
                    <ProgressBar x:Name="MainProgressBar" Maximum="100" Height="6"/>
                    
                    <Grid>
                        <TextBlock x:Name="CurrentStepText" Text="正在初始化..." 
                                   Style="{StaticResource BodyTextBlockStyle}" 
                                   HorizontalAlignment="Left" TextTrimming="CharacterEllipsis" MaxWidth="350"/>
                        
                        <TextBlock x:Name="ProgressDetailText" Text="0 MB / 0 MB" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   HorizontalAlignment="Right" Foreground="Gray"/>
                    </Grid>
                </StackPanel>
                
                <TextBlock x:Name="ErrorText" Visibility="Collapsed" Foreground="#FF4444" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <Button x:Name="CloseButton" Content="取消" Click="CloseButton_Click"/>
                <Button x:Name="ActionButton" Content="立即更新" Style="{StaticResource AccentButtonStyle}" Click="ActionButton_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>