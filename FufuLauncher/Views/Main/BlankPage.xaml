<Page
    x:Class="FufuLauncher.Views.BlankPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">
    
    <ScrollViewer Padding="24" HorizontalScrollBarVisibility="Auto">
        <StackPanel Spacing="16">
            
            
            <TextBlock Text="游戏信息" FontSize="24" FontWeight="Bold" Opacity="0.9" HorizontalAlignment="Center"/>
            
            
            <StackPanel Orientation="Horizontal" Spacing="24">
                
                
                <StackPanel Spacing="16" MinWidth="400">
                    
                    <Grid CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                          Padding="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        
                        <TextBlock Grid.Row="1" Text="游戏路径" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <Grid Grid.Row="2" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="PathTextBox" 
                                     PlaceholderText="如无法选择路径，请手动输入路径"
                                     TextWrapping="Wrap" 
                                     TextChanged="PathTextBox_TextChanged"
                                     KeyDown="PathTextBox_KeyDown"
                                     Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="1" 
                                    x:Name="ApplyPathButton" 
                                    Content="应用" 
                                    Click="ApplyPath_Click" 
                                    IsEnabled="False" 
                                    Padding="12,6" 
                                    Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="2" 
                                    Content="选择" 
                                    Click="SelectPath_Click" 
                                    Style="{StaticResource AccentButtonStyle}" 
                                    Padding="16,8"/>
                            
                        </Grid>
                        
                        <ProgressRing x:Name="LoadingRing" Grid.Row="3" Width="20" Height="20" 
                                      IsActive="False" HorizontalAlignment="Left"/>
                    </Grid>
                    
                    
                    <Grid x:Name="InfoPanel" CornerRadius="8" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                          Padding="16" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="游戏详情" FontSize="16" FontWeight="SemiBold" 
                                   Margin="0,0,0,12" Opacity="0.9"/>
                        
                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="版本：" Opacity="0.8"/>
                            <TextBlock x:Name="VersionText" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Grid Grid.Row="2" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="服务器：" Opacity="0.8"/>
                            <TextBlock x:Name="ServerText" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Grid Grid.Row="3" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="占用空间：" Opacity="0.8"/>
                            <TextBlock x:Name="SizeText" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                        
                        
                        <Grid Grid.Row="4" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="最新版本：" Opacity="0.8"/>
                            <TextBlock x:Name="LatestVersionText" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                        
                        
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="预下载：" Opacity="0.8"/>
                            <TextBlock x:Name="PreDownloadText" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                    </Grid>
                    
                    
                    <Grid x:Name="EmptyPanel" CornerRadius="8" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                          Padding="40" Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE896;" FontSize="48" Opacity="0.5" Margin="0,0,0,16"/>
                            <TextBlock Text="尚未选择游戏目录" FontSize="16" FontWeight="SemiBold" 
                                       TextAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="选择目录后自动读取游戏信息" FontSize="13" Opacity="0.7" 
                                       TextAlignment="Center" TextWrapping="Wrap" MaxWidth="300"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                
                <Grid MinWidth="400" MaxWidth="600" CornerRadius="8" 
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                      Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="游戏管理" FontSize="16" FontWeight="SemiBold" Opacity="0.9"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="添加账号" Click="AddAccount_Click" Style="{StaticResource AccentButtonStyle}" Padding="12,6"/>
                            <Button Content="刷新列表" Click="RefreshAccounts_Click" Padding="12,6"/>
                        </StackPanel>
                    </Grid>

                    
                    <Rectangle Grid.Row="1" Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8"/>

                    
                    <ScrollViewer Grid.Row="2" MaxHeight="200" Margin="0,8,0,0">
                        <ListView x:Name="AccountsListView" SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="4">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding SdkData}" Opacity="0.7" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Opacity="0.5" FontSize="11">
                                                <Run Text="最后使用: "/>
                                                <Run Text="{Binding LastUsed, Converter={StaticResource DateTimeConverter}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                            <Button Content="切换" Tag="{Binding}" Click="SwitchAccount_Click" Style="{StaticResource AccentButtonStyle}" Padding="8,4"/>
                                            <Button Content="删除" Tag="{Binding}" Click="DeleteAccount_Click" Padding="8,4"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,4"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </StackPanel>
            
            
            <Button Content="查看游戏公告" Click="OpenAnnouncement_Click"
                    Style="{StaticResource AccentButtonStyle}" 
                    HorizontalAlignment="Center" 
                    Margin="0,32,0,0"
                    Padding="24,12"
                    MinWidth="200"/>
            
        </StackPanel>
    </ScrollViewer>
</Page>