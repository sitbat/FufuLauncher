<windowex:WindowEx
    x:Class="FufuLauncher.Views.UpdateNotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:windowex="using:WinUIEx"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    Title="版本更新公告"
    Width="510"
    Height="730"
    MinWidth="510"
    MinHeight="730"
    IsMaximizable="False"
    IsMinimizable="False"
    IsResizable="True">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <Grid x:Name="AppTitleBar" Grid.Row="0" Height="40" 
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            
            <Image Grid.Column="0" Width="16" Height="16" Margin="12,0,0,0"
                   Source="/Assets/WindowIcon.ico" VerticalAlignment="Center"/>
            
            
            <TextBlock Grid.Column="1" Text="版本更新公告" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       VerticalAlignment="Center" Margin="12,0,0,0"
                       Opacity="0.8"/>
            
        </Grid>
        
        
        <Grid Grid.Row="1">
            <WebView2 x:Name="UpdateWebView" 
                      Margin="0,0,0,0"
                      DefaultBackgroundColor="Transparent"/>
        </Grid>
        
    </Grid>
</windowex:WindowEx>