<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog 
    x:Class="FufuLauncher.Views.GenshinHDRLuminanceSettingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:FufuLauncher.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:DefaultBindMode="OneWay"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    BorderThickness="1"
    BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    PrimaryButtonText="保存并生效"
    PrimaryButtonCommand="{x:Bind SaveCommand}"
    CloseButtonText="取消"
    CloseButtonCommand="{x:Bind CloseCommand}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">600</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">800</x:Double>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </ContentDialog.Resources>

    <Grid Width="500" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="HDR 亮度配置" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,12">
            <InfoBar IsOpen="{x:Bind HDRNotSupported}" Severity="Warning" Title="不支持 HDR" Message="当前显示器报告不支持 HDR。" IsClosable="False" />
            <InfoBar IsOpen="{x:Bind HDRNotEnabled}" Severity="Informational" Title="HDR 未开启" Message="Windows HDR 模式未开启，自动调整可能不准确。" IsClosable="False" />
            
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="12">
                <StackPanel>
                    <TextBlock Text="显示器信息" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                    <TextBlock Text="{x:Bind DisplayInfomation}" Style="{ThemeResource CaptionTextBlockStyle}" TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="0,0,12,0">
            <StackPanel Spacing="24" Padding="0,8">
                <StackPanel>
                    <TextBlock Text="HDR 开关设置 (每次启动时强制应用)" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                    <ToggleSwitch IsOn="{x:Bind IsGenshinHDRForceEnabled, Mode=TwoWay}" 
                                  OffContent="关闭 HDR (注册表值为 0)" 
                                  OnContent="开启 HDR (注册表值为 1)" />
                    <TextBlock Text="注意：保存后会立即修改注册表，且下次启动游戏时会自动重新应用此设置。" 
                               Style="{ThemeResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               TextWrapping="Wrap" Margin="0,4,0,0"/>
                </StackPanel>
                
                <MenuFlyoutSeparator />

                <StackPanel>
                    <Grid Margin="0,0,0,4">
                        <TextBlock Text="峰值亮度 (Max Luminosity)" VerticalAlignment="Center"/>
                        <NumberBox HorizontalAlignment="Right" Width="100" Value="{x:Bind MaxLuminance, Mode=TwoWay}" Minimum="300" Maximum="2000" SpinButtonPlacementMode="Compact"/>
                    </Grid>
                    <Slider Value="{x:Bind MaxLuminance, Mode=TwoWay}" Minimum="300" Maximum="2000" />
                </StackPanel>

                <StackPanel>
                    <Grid Margin="0,0,0,4">
                        <TextBlock Text="场景亮度 (Paper White)" VerticalAlignment="Center"/>
                        <NumberBox HorizontalAlignment="Right" Width="100" Value="{x:Bind SceneLuminance, Mode=TwoWay}" Minimum="100" Maximum="500" SpinButtonPlacementMode="Compact"/>
                    </Grid>
                    <Slider Value="{x:Bind SceneLuminance, Mode=TwoWay}" Minimum="100" Maximum="500" />
                </StackPanel>

                <StackPanel>
                    <Grid Margin="0,0,0,4">
                        <TextBlock Text="UI 亮度 (UI White)" VerticalAlignment="Center"/>
                        <NumberBox HorizontalAlignment="Right" Width="100" Value="{x:Bind UILuminance, Mode=TwoWay}" Minimum="150" Maximum="550" SpinButtonPlacementMode="Compact"/>
                    </Grid>
                    <Slider Value="{x:Bind UILuminance, Mode=TwoWay}" Minimum="150" Maximum="550" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="3" ColumnSpacing="8" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="重置默认" Command="{x:Bind ResetCommand}" HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1" Content="自动调整" Command="{x:Bind AutoAdjustCommand}" HorizontalAlignment="Stretch" ToolTipService.ToolTip="根据显示器数据自动推算"/>
        </Grid>
    </Grid>
</ContentDialog>