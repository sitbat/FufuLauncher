<Page
    x:Class="FufuLauncher.Views.AgreementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="24"
                    Padding="48">
            
            
            <Image Source="ms-appx:///Assets/icon.png"
                   Width="64"
                   Height="64"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
            
            <TextBlock Text="用户协议"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="欢迎使用芙芙启动器！在使用本软件之前，请仔细阅读并同意用户协议。"
                       FontSize="14"
                       TextWrapping="Wrap"
                       MaxWidth="400"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
            
            
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <CheckBox Grid.Column="0"
                          IsChecked="{x:Bind ViewModel.IsAgreementChecked, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Padding="0"
                          Margin="0"
                          MinWidth="0"/> 
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="8,0,0,0"> 
                    <TextBlock Text="我已阅读并同意" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <HyperlinkButton Content="用户协议" 
                                     Command="{x:Bind ViewModel.ViewAgreementCommand}" 
                                     Padding="0"
                                     Margin="4,0,0,0"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        
        <Grid Grid.Row="1" 
              Padding="24"
              BorderThickness="1,1,0,0"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
            
            <Button Content="下一步"
                    Command="{x:Bind ViewModel.NextCommand}"
                    IsEnabled="{x:Bind ViewModel.IsAgreementChecked, Mode=OneWay}"
                    HorizontalAlignment="Right"
                    CornerRadius="4"
                    Padding="24,8"
                    Style="{StaticResource AccentButtonStyle}"/>
        </Grid>
    </Grid>
</Page>