<Page
    x:Class="FufuLauncher.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/> <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" x:FieldModifier="public" Background="Transparent" Grid.Row="0"/>

        <Grid Grid.Row="1" Padding="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="20" VerticalAlignment="Top">
                <Image Source="/Assets/WindowIcon.ico" Width="100" Height="100" HorizontalAlignment="Left"/>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="FufuLauncher" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Text="Version 1.0.6.0" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

            </StackPanel>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel Spacing="32">

                    <StackPanel Spacing="12">
                        <TextBlock Text="Dev" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="16">
                            <ItemsControl>
                                <StackPanel Spacing="12">
                                    <HyperlinkButton NavigateUri="https://github.com/CodeCubist" Content="CodeCubist" HorizontalAlignment="Left" FontSize="14"/>
                                    <MenuFlyoutSeparator/>
                                    <HyperlinkButton NavigateUri="https://github.com/MarlonPullan6" Content="MIANKRAM" HorizontalAlignment="Left" FontSize="14"/>
                                    <MenuFlyoutSeparator/>
                                    <HyperlinkButton NavigateUri="https://github.com/liuqirui911" Content="liuqirui911" HorizontalAlignment="Left" FontSize="14"/>
                                    <MenuFlyoutSeparator/>
                                    <HyperlinkButton NavigateUri="https://github.com/ME46231" Content="ME46231" HorizontalAlignment="Left" FontSize="14"/>
                                    </StackPanel>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <HyperlinkButton Content="GitHub" NavigateUri="https://github.com/CodeCubist/FufuLauncher"/>
                        <HyperlinkButton Content="反馈问题" NavigateUri="https://github.com/CodeCubist/FufuLauncher/issues"/>
                        <HyperlinkButton Content="官方网站" NavigateUri="https://philia093.xyz"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>