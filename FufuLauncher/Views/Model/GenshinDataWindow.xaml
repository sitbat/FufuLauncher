<windowex:WindowEx
    x:Class="FufuLauncher.Views.GenshinDataWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:windowex="using:WinUIEx"
    xmlns:helpers="using:FufuLauncher.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="旅行札记 - 提瓦特财务报表"
    Width="1100"
    Height="720"
    MinWidth="900"
    MinHeight="600">

    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid.Resources>
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
            
            <Style x:Key="DashboardCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource SurfaceStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>
        </Grid.Resources>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8B9;" FontSize="24" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="旅行札记" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    
                    <Border Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusMessage}" Opacity="0.6" FontSize="12"/>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" ColumnSpacing="20" 
                  Visibility="{Binding TravelersDiary, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="340"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Style="{StaticResource DashboardCardStyle}" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="48" Height="48" Fill="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <FontIcon Glyph="&#xE77B;" FontSize="24" Foreground="White" HorizontalAlignment="Left" Margin="12,0,0,0"/>
                                
                                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Nickname}" FontSize="18" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Uid}" FontSize="12" Opacity="0.6"/>
                                    <TextBlock FontSize="10" Opacity="0.4" Margin="0,4,0,0">
                                        <Run Text="数据更新于: "/><Run Text="{Binding FormattedDate}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="今日收益" FontSize="14" Opacity="0.7"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,0,0,4">
                                            <FontIcon Glyph="&#xE735;" FontFamily="Segoe MDL2 Assets" Foreground="#FF6B6B" FontSize="12"/>
                                            <TextBlock Text="原石" FontSize="12" Opacity="0.6"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding TravelersDiary.Data.DayData.CurrentPrimogems}" 
                                                   FontSize="28" FontWeight="Bold"/>
                                    </StackPanel>

                                    <Rectangle Grid.Column="1" Width="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="10,4"/>

                                    <StackPanel Grid.Column="2">
                                        <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,0,0,4">
                                            <FontIcon Glyph="&#xE825;" FontFamily="Segoe MDL2 Assets" Foreground="#FFD700" FontSize="12"/>
                                            <TextBlock Text="摩拉" FontSize="12" Opacity="0.6"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding TravelersDiary.Data.DayData.CurrentMora}" 
                                                   FontSize="20" FontWeight="SemiBold" VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}">
                            <StackPanel Spacing="16">
                                <Grid>
                                    <TextBlock Text="本月累计" FontSize="14" Opacity="0.7" VerticalAlignment="Center"/>
                                    <Border Background="#1A4ECDC4" CornerRadius="4" HorizontalAlignment="Right" Padding="8,2">
                                        <TextBlock FontSize="12" Foreground="#00B894" FontWeight="Bold">
                                            <Run Text="Lv."/><Run Text="{Binding TravelersDiary.Data.MonthData.CurrentPrimogemsLevel}"/>
                                        </TextBlock>
                                    </Border>
                                </Grid>

                                <StackPanel>
                                    <TextBlock Text="获得原石" FontSize="12" Opacity="0.5"/>
                                    <TextBlock Text="{Binding FormattedMonthPrimogems}" 
                                               FontSize="36" FontWeight="Bold" Foreground="{ThemeResource SystemAccentColor}"/>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                        <TextBlock FontSize="12" Foreground="#00B894">
                                            <Run Text="环比 "/><Run Text="{Binding TravelersDiary.Data.MonthData.PrimogemsRate}"/><Run Text="%"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Opacity="0.4">
                                            <Run Text="(上月 "/><Run Text="{Binding TravelersDiary.Data.MonthData.LastPrimogems}"/><Run Text=")"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <MenuFlyoutSeparator/>

                                <StackPanel>
                                    <TextBlock Text="获得摩拉" FontSize="12" Opacity="0.5"/>
                                    <TextBlock Text="{Binding FormattedMonthMora}" 
                                               FontSize="24" FontWeight="SemiBold"/>
                                     <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                        <TextBlock FontSize="12" Foreground="#00B894">
                                            <Run Text="环比 "/><Run Text="{Binding TravelersDiary.Data.MonthData.MoraRate}"/><Run Text="%"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="• 每日数据通常在次日上午更新&#x0a;• 收入等级基于原石获取效率计算" 
                                   FontSize="11" Opacity="0.4" LineHeight="16" Margin="4,0,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="24,20,24,10" Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}" CornerRadius="8,8,0,0">
                            <TextBlock Text="本月原石收入来源分析" FontSize="16" FontWeight="SemiBold"/>
                        </Grid>

                        <ListView Grid.Row="1" ItemsSource="{Binding IncomeSources}" 
                                  SelectionMode="None" Padding="12">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Width="8" Height="8" Fill="{Binding Color}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Action}" Margin="16,0,0,0" 
                                                   VerticalAlignment="Center" FontSize="14"/>

                                        <Grid Grid.Column="2" VerticalAlignment="Center" Margin="0,0,24,0" Height="6">
                                            <ProgressBar Value="{Binding Percent}" Maximum="100" 
                                                         Foreground="{Binding Color}" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                                         ShowError="False" />
                                        </Grid>

                                        <TextBlock Grid.Column="3" Text="{Binding Num}" FontWeight="SemiBold" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>

                                        <TextBlock Grid.Column="4" Text="{Binding FormattedPercent}" 
                                                   Opacity="0.6" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <Grid Grid.Row="2" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Padding="24,16">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                <TextBlock Text="共计" Opacity="0.6" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TravelersDiary.Data.MonthData.CurrentPrimogems}" 
                                           FontSize="20" FontWeight="Bold" Foreground="{ThemeResource SystemAccentColor}"/>
                                <TextBlock Text="原石" Opacity="0.6" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</windowex:WindowEx>