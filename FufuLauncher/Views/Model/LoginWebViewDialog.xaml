<Window
    x:Class="FufuLauncher.Views.LoginWebViewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="登录米游社">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0" Margin="0">
            <Border Background="White" BorderThickness="0">
                <WebView2 x:Name="LoginWebView"
                          Source="https://www.miyoushe.com/ys/"
                          NavigationCompleted="LoginWebView_NavigationCompleted"/>
            </Border>

            <ProgressRing x:Name="LoadingRing"
                          IsActive="True"
                          Width="40"
                          Height="40"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Canvas.ZIndex="10"/>
            
            <TextBlock x:Name="StatusText"
                       Text="请在页面中登录您的米游社账户..."
                       Margin="16"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Opacity="0.8"
                       Canvas.ZIndex="10"/>
        </Grid>

        
        
        <Grid Grid.Row="1" 
              Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
              Padding="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="取消" Margin="0,0,8,0"
                    Padding="16,8" CornerRadius="6"
                    Click="CancelButton_Click"/>
            
            <Button Grid.Column="2" x:Name="CompleteButton" 
                    Content="完成登录" 
                    Padding="16,8" CornerRadius="6"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="CompleteButton_Click"
                    IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>