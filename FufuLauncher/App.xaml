<Application
    x:Class="FufuLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:FufuLauncher.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Styles/FontSizes.xaml" />
                <ResourceDictionary Source="/Styles/Thickness.xaml" />
                <ResourceDictionary Source="/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <helpers:DateTimeConverter x:Key="DateTimeConverter"/>
            <helpers:BoolNegationConverter x:Key="BoolNegationConverter"/>
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:BoolToGlyphConverter x:Key="BoolToGlyphConverter"/>
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <helpers:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
            <Style x:Key="AccentButtonStyle" TargetType="Button" />

        </ResourceDictionary>
    </Application.Resources>
</Application>